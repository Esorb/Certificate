<Window x:Class="Esorb.Certificate.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Esorb.Certificate.App.ViewModel"
        xmlns:view="clr-namespace:Esorb.Certificate.App.View.Controls"
        mc:Ignorable="d"
        Title="Zeugnisse" Height="600" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode ="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="LightGray" MouseDown="Border_MouseDown" MouseUp="Border_MouseUp">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" Height="32">
                    <Image.Source>
                        <BitmapImage UriSource="Pictures/GGS.png"/>
                    </Image.Source>
                </Image>
                <TextBlock Grid.Column="1" Text="Zeugnisprogramm der Gemeinschaftsgrundschule Forsbach" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial" FontSize="20"/>
                <view:MinimizeButton
                    Grid.Column="2" 
                    MinIcon="&#xE921;"
                    x:Name="MinimizeButton" 
                    KeyboardNavigation.IsTabStop="False" 
                    Click="MinimizeButton_Click"/>
                <view:CloseButton 
                    Grid.Column="3" 
                    Icon="&#xE711;"
                    x:Name="CloseButton" 
                    KeyboardNavigation.IsTabStop="False" 
                    Click="CloseButton_Click"/>
            </Grid>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="NavColumn" Width="110"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="LightGray" ButtonBase.Click="StackPanel_Click">
                <view:NavButton 
                    x:Name="BtnMenue" 
                    NavIcon="&#xE700;" 
                    Click="BtnMenue_Click"
                    />
                <view:NavButton 
                    x:Name="BtnStart" 
                    NavIcon="&#xE80F;"  
                    Text="Start" 
                    NavUri="/View/Pages/StartPage.xaml"
                    />
                <view:NavButton 
                    x:Name="BtnInput" 
                    NavIcon="&#xE70F;" 
                    Text="Eingabe" 
                    NavUri="/View/Pages/InputPage.xaml"
                    />
                <view:NavButton 
                    x:Name="BtnExport" 
                    NavIcon="&#xF571;" 
                    Text="Export" 
                    NavUri="/View/Pages/ExportPage.xaml"
                    />
                <view:NavButton 
                    x:Name="BtnAdmin" 
                    NavIcon="&#xE15E;" 
                    Text="Admin" 
                    NavUri="/View/Pages/AdminPage.xaml"
                    />
                <view:NavButton 
                    x:Name="BtnInfo" 
                    NavIcon="&#xE946;" 
                    Text="Info" 
                    NavUri="/View/Pages/InfoPage.xaml"
                    />
                <Frame x:Name="PageFrame" Grid.Column="1"/>
            </StackPanel>
            <Frame x:Name="AppFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
        <TabControl TabStripPlacement="Left" Grid.Row="1">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      ContentSource="Header"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="LightGray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                        <TextBlock Name="StartHeader" FontSize="24" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                        <TextBlock Text="Start" FontFamily="Arial" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Zeugnisdatei:" Padding="5,2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CertificateSettingsViewModel.DatabasePath, Mode=TwoWay}" Margin="5" Padding="5,2" Width="550" HorizontalAlignment="Left" FontSize="16"/>

                        <Button Grid.Row="1" Grid.Column="1" x:Name="BtnGetDatabasePath" Content="Zeugnisbasisdatei auswählen" Click="BtnGetDatabasePath_Click" Margin="5" Padding="5,2" FontSize="16">
                            <Button.ToolTip>
                                <ToolTip Background="LightYellow" Width="350">
                                    <StackPanel>
                                        <TextBlock FontSize="14" Text="Wählen Sie die entpackte Zeugnisbasisdatei aus (*.db, nicht die verteilte verschlüsselte Zip-Datei)!" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ausgabeverzeichnis:" Padding="5,2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CertificateSettingsViewModel.OutputFolder, Mode=TwoWay}" Margin="5" Padding="5,2" Width="550" HorizontalAlignment="Left" FontSize="16"/>

                        <Button Grid.Row="3" Grid.Column="1" x:Name="BtnGetOutputPath" Content="Ausgabeverzeichnis auswählen" Click="BtnGetOutputPath_Click" Margin="5" Padding="5,2" FontSize="16">
                            <Button.ToolTip>
                                <ToolTip Background="LightYellow" Width="350">
                                    <StackPanel>
                                        <TextBlock FontSize="14" Text="Wählen Sie hier das Verzeichnis, in das die Zeugnisse gespeichert werden sollen!" TextWrapping="Wrap"/>
                                        <TextBlock FontSize="14" Text="Am besten nehmen Sie ein leeres Verzeichnis, in das nur die Zeignisdateien gespeichert werden." TextWrapping="Wrap"/>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Lehrer:" Padding="5,2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CertificateSettingsViewModel.Teacher, Mode=TwoWay}" Margin="5" Padding="5,2" Width="550" HorizontalAlignment="Left" FontSize="16"/>
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Klasse:" Padding="5,2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CertificateSettingsViewModel.SchoolClass, Mode=TwoWay}" Margin="5" Padding="5,2" Width="100" HorizontalAlignment="Left" FontSize="16"/>

                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
