<Page x:Class="Esorb.Certificate.App.View.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Esorb.Certificate.App.View.Pages"
      xmlns:view="clr-namespace:Esorb.Certificate.App.View.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
            <view:NavButton x:Name="BtnTemplate" Text="Zeugnisvorlagen"/>
            <view:NavButton x:Name="BtnCertificate" Text="Zeugnis"/>
            <view:NavButton x:Name="BtnTeacher" Text="Lehrer"/>
            <view:NavButton x:Name="BtnPupil" Text="Schüler"/>
            <view:NavButton x:Name="BtnClass" Text="Klassen"/>
            <view:NavButton x:Name="BtnDistribution" Text="Datenbank zur Verteilung vorbereiten"/>
        </StackPanel>
    </Grid>
</Page>
