<Page x:Class="Esorb.Certificate.App.View.Pages.TemplatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Esorb.Certificate.App.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TemplatePage"
      FontSize="16">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../DataTemplates/CertificateTemplateDataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Button
                    Content="Lade Zeugnis-Master (*.xlsx)" 
                    Width="200" 
                    HorizontalAlignment="Left"
                    Margin="4,10" 
                    Padding="5,2" 
                    FontSize="16">
                </Button>
                <!--<ItemsControl ItemsSource="{Binding CertificateTemplateViewModels}"/>-->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
